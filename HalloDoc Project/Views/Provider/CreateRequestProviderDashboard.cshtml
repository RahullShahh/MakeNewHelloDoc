@model CreateRequestViewModel
@{
    Layout = "_ProviderDashboardLayout";
    ViewData["Title"] = "Provider Create Request";

}
<div class="container-fluid  pb-4">
    <div class="mx-auto pt-3 mb-3 container-sm" id="secondDiv">
        <div class="backbtn d-flex justify-content-between px-3">
            <h4 class="text-body my-auto">Submit Information</h4>
            <button onclick="history.back()"
                    class="p-2 border text-decoration-none border-info rounded bg-transparent">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill=#10bce9 class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5" />
                </svg>
                <span class="mx-2 text-info">Back</span>
            </button>
        </div>
        <partial name="_ValidationScriptsPartial"> </partial>
        <div id="FormOfPatientRequest" class="container-sm mt-3 p-3 gx-4 mb-3 shadow">
            <form class="form-floating" asp-action="CreateRequestProviderDashboard" asp-controller="Provider" method="post" enctype="multipart/form-data">
                <div class="row gx-4">
                    <h4>Patient</h4>

                    <div class="col-sm-12 col-md-12 col-lg-6  my-3">
                        <div class="form-floating">
                            <input type="text"
                                   asp-for="firstname"
                                   class="form-control"
                                   id=""
                                   placeholder="First Name" />
                            <label class="ms-2">First Name</label>
                        </div>
                        <span asp-validation-for="@Model.firstname" class="validation"></span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 my-3">
                        <div class="form-floating">
                            <input type="text"
                                   asp-for="lastname"
                                   class="form-control border shadow-none "
                                   id=""
                                   placeholder="Last Name" />
                            <label class="ms-2">Last Name</label>
                        </div>
                        <span asp-validation-for="@Model.lastname" class="validation"></span>

                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6  my-3">
                        <div class="form-floating">
                            <input type="tel"
                                   asp-for="phoneno"
                                   class="form-control border shadow-none "
                                   id=""
                                   placeholder="PhoneNumber" />
                            <label class="ms-2">Mobile Number</label>
                        </div>
                        <span asp-validation-for="phoneno" class="validation"></span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6  my-3">
                        <div class="form-floating">
                            <input type="text"
                                   asp-for="email"
                                   class="form-control border shadow-none"
                                   id=""
                                   placeholder="name@inputtype.com" />
                            <label class="ms-2">Email</label>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6  my-3">
                        <div class="form-floating">
                            <input type="date"
                                   asp-for="birthDate"
                                   max="@DateTime.Now.ToString("yyyy-MM-dd")"
                                   min="@DateTime.Now.AddYears(-80).ToString("yyyy-MM-dd")"
                                   class="form-control border shadow-none"
                                   id=""
                                   placeholder="Date Of Birth" />
                            <label class="ms-2">Date Of Birth</label>
                        </div>
                        <span asp-validation-for="birthDate" class="validation"></span>
                    </div>

                    <h4 class="mt-3">
                        Location
                    </h4>
                    <div class="col-sm-12 col-md-12 col-lg-6  my-3">
                        <div class="form-floating">
                            <input type="text"
                                   asp-for="street"
                                   class="form-control border shadow-none"
                                   id="floatingInput6"
                                   placeholder="First Name" />
                            <label class="ms-2">Street</label>
                        </div>
                        <span asp-validation-for="street" class="validation"></span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 my-3">
                        <div class="form-floating">
                            <input type="text"
                                   asp-for="city"
                                   class="form-control border shadow-none"
                                   id=""
                                   placeholder="Last Name" />
                            <label class="ms-2">City</label>
                        </div>
                        <span asp-validation-for="city" class="validation"></span>

                    </div>

                    <div class="col-sm-12 col-md-12 col-lg-6  my-3">
                        <div>
                            <select class="form-control border d-flex align-items-center py-2" asp-for="state" name="SelectedStateId">
                                <option>Select State</option>
                                @for (int i = 0; i < Model.regions.Count; i++)
                                {
                                    <option value="@Model.regions[i].Regionid">@Model.regions[i].Name</option>
                                }
                            </select>
                        </div>
                        <span asp-validation-for="state" class="validation"></span>

                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 my-3">
                        <div class="form-floating">
                            <input type="text"
                                   asp-for="zipcode"
                                   class="form-control border shadow-none"
                                   id=""
                                   placeholder="Last Name" />
                            <label class="ms-2">Zip Code</label>
                        </div>
                        <span asp-validation-for="zipcode" class="validation"></span>

                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <div class="form-floating">
                            <input type="text"
                                   asp-for="room"
                                   class="form-control border shadow-none"
                                   id=""
                                   placeholder="Last Name" />
                            <label class="ms-2">Room # / Suite (Optional)</label>
                        </div>
                        <span asp-validation-for="room" class="validation"></span>

                    </div>
                    <h4 class="mt-3">
                        Notes
                    </h4>
                    <div class=" my-3 control-group col-12">
                        <div class="form-floating">
                            <textarea class="form-control shadow-none"
                                      placeholder="Leave a comment here"
                                      asp-for="adminNotes"
                                      id=""
                                      style="height: 120px"></textarea>
                            <label class="ms-2 floating-label">Admin Notes (Optional)</label>
                        </div>
                        <span asp-validation-for="adminNotes" class="validation"></span>
                    </div>
                    <div class="d-flex justify-content-end m-3">
                        <button type="submit" class="btn border-none bg-info text-light" id="submitBtn">
                            Submit
                        </button>
                        <button type="reset" class="btn btn-outline-info ">
                            Cancel
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
